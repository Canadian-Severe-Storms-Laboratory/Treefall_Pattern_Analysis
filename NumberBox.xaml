<UserControl x:Class="TreefallPatternAnalysis.NumberBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="50">
    <Grid>
        <TextBox TextWrapping="Wrap" BorderBrush="Black" Text="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}, Path=NumberString, UpdateSourceTrigger=PropertyChanged}" TextAlignment="Center" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" PreviewTextInput="NumberValidationTextBox" TextChanged="TextBox_TextChanged"  FontSize="16"/>
    </Grid>
</UserControl>
